</body>

<script>
window.onload = function(){
<!--        window.alert('すでにそのインテントは登録されています'); -->
}
document.getElementById('addItem').onsubmit = function(){
    var keyword = document.getElementById('addItem').newItem.value;
    if (keyword.length == 0){
        window.alert('入力欄に追加したいインテントを入力してください');
        return false;
    }
}
document.getElementById('delItem').onsubmit = function(){
    var keyword = document.getElementById('delItem').delNum.value;
    leng = <%= postsLength %>
    if (keyword.length == 0){
        window.alert('入力欄に削除したいインテントの番号を入力してください');
        return false;
    } else if (keyword >= leng){
        window.alert("値が大きすぎます");
        return false;
    } else {
        window.alert(keyword+' を削除します');
    }
}
</script>
