    <td><input type="submit" value="追加" style="font-size:16px;"></td></tr>
</table>
</form>
<form method="post" action="/editIntent" id="delItem">
<table border="1">
    <tr align="center"><td>削除したい番号</td><td><input type="text" name="delNum"></td>
    <td><input type="submit" value="削除" style="font-size:16px;"></td></tr>
</table>
</form>
    <ul>
        <% for (var i=0;i < posts.length; i++ ) { %>
        <li><%= i+"："+posts[i][1] %></li>
        <% } %>
